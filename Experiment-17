#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, req[20], head, total = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter requests: ");
    for(int i=0;i<n;i++)
        scanf("%d", &req[i]);

    printf("Enter head position: ");
    scanf("%d", &head);

    printf("\nFCFS Order: %d ", head);

    for(int i=0;i<n;i++){
        total += abs(req[i] - head);
        head = req[i];
        printf("-> %d ", head);
    }

    printf("\nTotal Head Movement = %d\n", total);
}
