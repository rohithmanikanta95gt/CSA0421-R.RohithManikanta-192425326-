#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size, direction;
    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter the disk request sequence: ");
    for(int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size (e.g., 200): ");
    scanf("%d", &disk_size);

    printf("Enter direction (0 for left, 1 for right): ");
    scanf("%d", &direction);

    int left[n], right[n], l_count = 0, r_count = 0;

    // Separate requests
    for(int i=0;i<n;i++){
        if(req[i] < head) left[l_count++] = req[i];
        else right[r_count++] = req[i];
    }

    // Add end points
    if(direction == 0) left[l_count++] = 0;
    else right[r_count++] = disk_size-1;

    // Sort left ascending
    for(int i=0;i<l_count-1;i++)
        for(int j=i+1;j<l_count;j++)
            if(left[i] > left[j]){
                int temp = left[i]; left[i] = left[j]; left[j] = temp;
            }

    // Sort right ascending
    for(int i=0;i<r_count-1;i++)
        for(int j=i+1;j<r_count;j++)
            if(right[i] > right[j]){
                int temp = right[i]; right[i] = right[j]; right[j] = temp;
            }

    int total_movement = 0;
    int current = head;

    printf("\nHead movements:\n");

    if(direction == 1) { // Moving right
        for(int i=0;i<r_count;i++){
            printf("Move from %d to %d, movement=%d\n", current, right[i], abs(right[i]-current));
            total_movement += abs(right[i]-current);
            current = right[i];
        }
        // Jump to beginning
        total_movement += abs(current - 0);
        printf("Jump from %d to 0\n", current);
        current = 0;
        for(int i=0;i<l_count-1;i++){ // exclude the 0 already jumped
            printf("Move from %d to %d, movement=%d\n", current, left[i+1], abs(left[i+1]-current));
            total_movement += abs(left[i+1]-current);
            current = left[i+1];
        }
    } else { // Moving left
        for(int i=l_count-1;i>=0;i--){
            printf("Move from %d to %d, movement=%d\n", current, left[i], abs(left[i]-current));
            total_movement += abs(left[i]-current);
            current = left[i];
        }
        // Jump to end
        total_movement += abs(current - (disk_size-1));
        printf("Jump from %d to %d\n", current, disk_size-1);
        current = disk_size-1;
        for(int i=r_count-2;i>=0;i--){ // exclude the last already jumped
            printf("Move from %d to %d, movement=%d\n", current, right[i], abs(right[i]-current));
            total_movement += abs(right[i]-current);
            current = right[i];
        }
    }

    printf("\nTotal head movement = %d\n", total_movement);
    printf("Average head movement = %.2f\n", (float)total_movement/n);

    return 0;
}
