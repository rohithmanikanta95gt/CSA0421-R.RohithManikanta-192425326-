#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

sem_t forks[5];

void *philosopher(void *num) {
    int id = *(int *)num;

    while (1) {
        printf("Philosopher %d is thinking\n", id);
        sleep(1);

        sem_wait(&forks[id]);
        sem_wait(&forks[(id+1)%5]);

        printf("Philosopher %d is eating\n", id);
        sleep(1);

        printf("Philosopher %d finished eating\n", id);

        sem_post(&forks[id]);
        sem_post(&forks[(id+1)%5]);

        sleep(1);
    }
}

int main() {
    pthread_t philo[5];
    int ids[5];

    for (int i = 0; i < 5; i++)
        sem_init(&forks[i], 0, 1);

    for (int i = 0; i < 5; i++) {
        ids[i] = i;
        pthread_create(&philo[i], NULL, philosopher, &ids[i]);
    }

    for (int i = 0; i < 5; i++)
        pthread_join(philo[i], NULL);

    return 0;
}
