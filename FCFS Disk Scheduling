#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, head, movement = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int req[n];

    printf("Enter the request queue:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    int current = head;

    for (i = 0; i < n; i++) {
        movement += abs(req[i] - current);
        current = req[i];
    }

    printf("\nTotal Head Movement = %d\n", movement);

    return 0;
}
