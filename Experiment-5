#include <stdio.h>

int main() {
    int n, bt[20], pr[20], wt[20], tat[20], i, j, t;

    scanf("%d",&n);
    for(i=0;i<n;i++) scanf("%d %d",&bt[i],&pr[i]); // burst time, priority

    for(i=0;i<n;i++)                                // sort by priority
        for(j=i+1;j<n;j++)
            if(pr[j] < pr[i]) {
                t=pr[i]; pr[i]=pr[j]; pr[j]=t;
                t=bt[i]; bt[i]=bt[j]; bt[j]=t;
            }

    wt[0]=0;
    for(i=1;i<n;i++) wt[i] = wt[i-1] + bt[i-1];

    for(i=0;i<n;i++) tat[i] = wt[i] + bt[i];

    printf("BT PR WT TAT\n");
    for(i=0;i<n;i++)
        printf("%d  %d  %d  %d\n", bt[i], pr[i], wt[i], tat[i]);

    return 0;
}
